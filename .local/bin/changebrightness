#!/bin/bash

function send_notification() {
	brightness=$(brillo)
	dunstify -a "changebrightness" -u low -r "9993" -h int:value:"$brightness" -i "brightness-$1" "Brightness: ${brightness}%" -t 2000
}

case $1 in
up)
	brillo -q -A 2
	send_notification $1
	;;
down)
	brillo -q -U 2
	send_notification $1
	;;
esac
